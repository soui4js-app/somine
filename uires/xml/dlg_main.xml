<?xml version="1.0" encoding="utf-8"?>
<SOUI name="mainWindow" title="@string/title" bigIcon="ICON_LOGO:32" smallIcon="ICON_LOGO:16" margin="5,5,5,5"  resizable="1" wndType="appMain"
translucent="1"
>
  <root skin="_skin.sys.wnd.bkgnd" cache="1"  width="-1" height="-1" layout="vbox">
    <caption size="-2,30" layout="hbox" gravity="center">
		<icon src="ICON_LOGO:16"/>
		<text>@string/title</text>
		<window size="0,0" weight="1"/>
		<imgbtn id="sysid_min" skin="_skin.sys.btn.minimize" animate="1" />
		<window>
			<imgbtn id="sysid_max" skin="_skin.sys.btn.maximize"  pos="0,0" animate="1" />
			<imgbtn id="sysid_restore" skin="_skin.sys.btn.restore"  pos="0,0" show="0" animate="1" />
		</window>
      	<imgbtn id="sysid_close" skin="_skin.sys.btn.close"    pos="-45,0" tip="close" animate="1"/>
    </caption>
    <window size="-1,-1" padding="5" layout="vbox">
		<window size="-2,30" layout="hbox" interval="10" gravity="center">
			<window size="0,0" weight="1"/>
			<radio name="opt_easy" id="200" text="Easy" checked="1"/>
			<radio name="opt_middle" id="201" text="Middle"/>
			<radio name="opt_hard" id="202" text="Hard"/>
			<window size="0,0" weight="1"/>
			<check name="chk_enable_ques" text="enable question" checked="1"/>
		</window>
		<window size="-2,49" layout="hbox" interval="2" gravity="center">
			<window size="0,0" weight="1"/>
			<img skin="icon_mine"/>
			<text text=":"/>
			<text size="50,-2" name="txt_mine" text="0"/>
			<img skin="icon_timer"/>
			<text text=":"/>
			<text size="50,-2" name="txt_time_cost" text="0"/>
			<button name="btn_reset" name="btn_reset" size="80,30" text="Reset"/>
			<window size="0,0" weight="1"/>
		</window> 
		<window size="-1,-1">
			<window pos="0,0" size="-1,-1" name="wnd_board" layout="gridlayout" interval="0" gravity="fill"/>
			<stack pos="0,0,-0,-0"  name="stack_result" visible="0" curSel="-1">
				<window name="wnd_win">
					<animateimg pos="|0,|0" offset="-0.5,-0.5" skin="skin_win" autoStart="1" speed="100"/>
				</window>
				<window name="wnd_fail">
					<animateimg pos="|0,|0" offset="-0.5,-0.5" skin="skin_fail" autoStart="1" speed="100" repeat="1"/>
				</window>
			</stack>
		</window>
    </window>
  </root>
</SOUI>