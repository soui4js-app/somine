<?xml version="1.0" encoding="utf-8"?>
<SOUI name="mainWindow" title="@string/title" bigIcon="ICON_LOGO:32" smallIcon="ICON_LOGO:16" margin="5,5,5,5"  resizable="0" wndType="appMain"
translucent="1"
>
  <root skin="_skin.sys.wnd.bkgnd" cache="1"  width="-1" height="-1" layout="vbox">
    <caption size="-2,30" layout="hbox" gravity="center">
		<icon src="ICON_LOGO:16"/>
		<text>@string/title</text>
		<window size="0,0" weight="1"/>
		<imgbtn name="btn_option" tip="option" skin="btn_config"/>
		<imgbtn id="sysid_min" skin="_skin.sys.btn.minimize" animate="1" />
      	<imgbtn id="sysid_close" skin="_skin.sys.btn.close"   tip="close" animate="1"/>
    </caption>
    <window size="-1,-1" padding="5" layout="vbox">
		<window size="-2,49" layout="hbox" interval="2" gravity="center">
			<window size="0,0" weight="1"/>
			<img skin="icon_mine"/>
			<text text=":"/>
			<text size="50,-2" name="txt_mine" text="0"/>
			<img skin="icon_timer"/>
			<include src="xml:digit" name="digit_time_2"/>
			<include src="xml:digit" name="digit_time_1"/>
			<include src="xml:digit" name="digit_time_0"/>
			<button name="btn_reset" name="btn_reset" size="80,30" text="重来"/>
			<window size="0,0" weight="1"/>
		</window> 
		<stack size="-1,-1" curSel="-2" colorBkgnd1="@color/red">
			<window name="wnd_board" layout="gridlayout" interval="0" gravity="fill"/>
			<stack size="-2,-2" name="stack_result" visible="0" curSel="-1" aniType="push" vertical="1" duration="2000">
				<window name="wnd_win" layout="vbox" gravity="center">
					<img skin="img_congratulations"/>
					<animateimg skin="skin_win" name="ani_win" autoStart="1" speed="100"/>
				</window>
				<window name="wnd_fail" layout="vbox" gravity="center">
					<img skin="img_better_luck"/>
					<animateimg skin="skin_fail" name="ani_fail" autoStart="1" speed="100"/>
				</window>
			</stack>
		</stack>
    </window>
  </root>
</SOUI>